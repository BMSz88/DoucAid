{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd Chatbot-backend && npm install"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "cd Chatbot-backend && npm start",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    }
}